@using Microsoft.AspNetCore.Components.Web

<MudButton Variant="@Variant"
           Color="@Color"
           Size="@Size"
           StartIcon="@StartIcon"
           EndIcon="@EndIcon"
           Disabled="@Disabled"
           FullWidth="@FullWidth"
           Class="@($"app-button {Class}")"
           Style="@Style"
           OnClick="@OnClick">
    @ChildContent
</MudButton>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public Variant Variant { get; set; } = Variant.Filled;
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public Size Size { get; set; } = Size.Medium;
    [Parameter] public string? StartIcon { get; set; }
    [Parameter] public string? EndIcon { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool FullWidth { get; set; }
    [Parameter] public string? Class { get; set; }
    [Parameter] public string? Style { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
}

<style>
    .app-button {
        border-radius: var(--app-border-radius-md);
        font-weight: 600;
        text-transform: none;
        box-shadow: var(--app-shadow-1);
        transition: all var(--app-transition-duration-fast) var(--app-transition-easing);
    }
    
    .app-button:hover {
        box-shadow: var(--app-shadow-2);
        transform: translateY(-1px);
    }
    
    .app-button.mud-button-filled-primary {
        background-color: var(--app-color-primary);
        color: var(--app-color-primary-contrast);
    }
    
    .app-button.mud-button-filled-secondary {
        background-color: var(--app-color-secondary);
        color: var(--app-color-secondary-contrast);
    }
</style>