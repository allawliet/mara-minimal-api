@inherits LayoutComponentBase
@namespace imas.Web.Components.Layout

<div class="auth-layout">
    <main class="auth-main">
        @Body
    </main>
</div>

<style>
    .auth-layout {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .auth-main {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    /* Hide the main layout elements when in auth mode */
    .auth-layout ~ * {
        display: none !important;
    }
</style>
